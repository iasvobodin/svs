precision mediump float;
    
        varying vec3 vVertexPosition;
        varying vec2 vTextureCoord;
    
        uniform sampler2D uRenderTexture;
    
        uniform float uScrollEffect;
    
        void main() {
            vec2 textureCoords = vTextureCoord;
    
            vec2 redTextCoords = vec2(vTextureCoord.x- uScrollEffect / 300.0, vTextureCoord.y );
            vec2 greenTextCoords = vec2(vTextureCoord.x - uScrollEffect / 600.0, vTextureCoord.y );
            vec2 blueTextCoords = vec2(vTextureCoord.x - uScrollEffect / 900.0, vTextureCoord.y );
    
            vec4 red = texture2D(uRenderTexture, redTextCoords);
            vec4 green = texture2D(uRenderTexture, greenTextCoords);
            vec4 blue = texture2D(uRenderTexture, blueTextCoords);
    
            vec4 finalColor = vec4(red.r, green.g, blue.b, min(1.0, red.a + blue.a + green.a));
            gl_FragColor = finalColor;
        }